<h1>Sign up</h1>

<% if flash[:notice] %>
  <div class="error"><%= flash[:notice] %></div>
<% end %>


<section>
  Please enter your log in information in the form bellow, to sign up to BookMarkManager.
</section>

<form action="/users" method="post">
  <h2>Registration Form</h2>

  <section>
    <ul>
      <li><input name="username" type="text" value="<%= @user.username %>" placeholder="Username" required /></li>
      <li><input name="email" type="text" value="<%= @user.email %>" placeholder="Email" required /></li>
      <li><input name="password" type="password" placeholder="Password" required/></li>
      <li>
        <input name="password_confirmation" type="password" placeholder="Confirm password" required/>
        <% if flash[:error] %>

          <span class="error">
            <%= flash[:error] %>
          </span>
        <% end %>
      </li>
    </ul>
  </section>

  <section>
    <p>
      <input value="Submit" type="submit">
    </p>
  </section>


</form>
