<h1>Sign up</h1>

<% if flash[:error] %>
  Please refer to the following errors below:
  <ul  class="error">
    <% flash[:error].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>


<section>
  Please enter your log in information in the form bellow, to sign up to BookMarkManager.
</section>

<form action="/users" method="post">
  <h2>Registration Form</h2>

  <section>
    <ul>
      <li><input name="username" type="text" value="<%= @user.username %>" placeholder="Username" required /></li>
      <li><input name="email" type="email" value="<%= @user.email %>" placeholder="Email" required /></li>
      <li><input name="password" type="password" placeholder="Password" required/></li>
      <li>
        <input name="password_confirmation" type="password" placeholder="Confirm password" required/>
      </li>
    </ul>
  </section>

  <section>
    <p>
      <input value="Submit" type="submit">
    </p>
  </section>


</form>
